{
    "name": "antigravity-pulse",
    "displayName": "Antigravity Pulse",
    "description": "100% local & super lightweight Antigravity quota monitor",
    "version": "1.4.0",
    "publisher": "codavidgarcia",
    "engines": {
        "vscode": "^1.90.0"
    },
    "icon": "icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "antigravityPulse.refresh",
                "title": "Antigravity Pulse: Refresh"
            },
            {
                "command": "antigravityPulse.toggleClockFormat",
                "title": "Antigravity Pulse: Toggle Clock Format"
            },
            {
                "command": "antigravityPulse.toggleResetTime",
                "title": "Antigravity Pulse: Toggle Reset Countdown in Status Bar"
            },
            {
                "command": "antigravityPulse.toggleSmartPolling",
                "title": "Antigravity Pulse: Toggle Smart Polling"
            }
        ],
        "configuration": {
            "title": "Antigravity Pulse",
            "properties": {
                "antigravityPulse.pollingInterval": {
                    "type": "number",
                    "default": 30,
                    "minimum": 30,
                    "description": "Polling interval in seconds (minimum: 30s)"
                },
                "antigravityPulse.clockFormat": {
                    "type": "string",
                    "default": "auto",
                    "enum": [
                        "auto",
                        "12h",
                        "24h"
                    ],
                    "description": "Clock format for reset times: auto (OS locale), 12h, or 24h"
                },
                "antigravityPulse.showResetTime": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the time until quota reset next to each pool in the status bar"
                },
                "antigravityPulse.smartPolling": {
                    "type": "boolean",
                    "default": true,
                    "description": "Pause polling when Antigravity is not focused and resume on return"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "npm run compile && npx @vscode/vsce package --no-dependencies"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/node": "^20.0.0",
        "@vscode/vsce": "^3.2.0",
        "typescript": "^5.3.0"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/codavidgarcia/antigravity-pulse"
    }
}